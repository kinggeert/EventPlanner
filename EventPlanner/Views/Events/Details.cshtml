@model EventPlanner.Models.Event

@{
    ViewData["Title"] = "Details";
}

<h1>
    @Html.DisplayFor(model => model.EventName)
</h1>

<div>
    <hr />
    <dl class="row">
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventDescription)
        </dd>
        <br>
        <dt class = "col-sm-2">
            Date:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventDate)
        </dd>
        <dt class = "col-sm-2">
            Ticket price:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketPrice)
        </dd>
        <dt class = "col-sm-2">
            Remaining tickets:
        </dt>
        <dd class = "col-sm-10">
            @Model.GetRemainingTickets()
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Purchase" asp-route-id="@Model?.EventId">Purchase</a> |
    <a asp-action="Index">Back to List</a>
</div>
